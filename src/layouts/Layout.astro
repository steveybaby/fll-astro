---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const siteTitle = "Piedmont Makers Club FLL Challenge Team (NEED A NAME!)";
const fullTitle = title ? `${title} | ${siteTitle}` : siteTitle;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A simple website with blog and photos" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{fullTitle}</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }

      header {
        border-bottom: 2px solid #007acc;
        margin-bottom: 30px;
        padding-bottom: 20px;
      }

      header h1 {
        margin: 0;
        font-size: 1.8em;
      }

      header h1 a {
        text-decoration: none;
        color: #333;
      }

      nav {
        margin-top: 15px;
      }

      nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 25px;
        flex-wrap: wrap;
      }

      nav a {
        text-decoration: none;
        color: #007acc;
        font-weight: 500;
        transition: color 0.2s;
      }

      nav a:hover {
        color: #005580;
      }

      main {
        margin-bottom: 40px;
      }

      footer {
        border-top: 1px solid #ddd;
        padding-top: 20px;
        text-align: center;
        color: #666;
        font-size: 0.9em;
      }

      @media (max-width: 600px) {
        body {
          padding: 15px;
        }
        
        nav ul {
          flex-direction: column;
          gap: 10px;
        }
        
        header h1 {
          font-size: 1.5em;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href="/">Piedmont Makers Club FLL Challenge Team (NEED A NAME!)</a></h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/meeting-plans/">Meetings</a></li>
          <li><a href="/about/">About</a></li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/photos/">Photos</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <p>&copy; {new Date().getFullYear()} Piedmont Makers Club FLL Challenge Team (NEED A NAME!)</p>
    </footer>
  </body>
</html>