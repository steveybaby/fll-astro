<style>
  .resources-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .banner {
    background: linear-gradient(135deg, var(--color-accent) 0%, #c13127 100%);
    color: white;
    padding: calc(var(--grid-unit) * 4);
    border-radius: 8px;
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 6);
  }

  .banner h1 {
    font-family: var(--font-heading-primary);
    font-size: 2.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 calc(var(--grid-unit) * 2) 0;
    color: white;
  }

  .banner-text {
    margin: 0;
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .banner-text a {
    color: white;
    text-decoration: underline;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .banner-text a:hover {
    text-decoration: none;
    opacity: 0.8;
  }

  .resources {
    display: grid;
    gap: calc(var(--grid-unit) * 5);
  }

  .resource-section {
    background-color: var(--color-surface);
    padding: calc(var(--grid-unit) * 4);
    border-radius: 8px;
    border-left: 4px solid var(--color-accent);
    border: 2px solid var(--color-border);
  }

  .resource-section h2 {
    font-family: var(--font-heading-secondary);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 calc(var(--grid-unit) * 3) 0;
  }

  .resource-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .resource-list li {
    margin-bottom: calc(var(--grid-unit) * 2);
    padding-left: calc(var(--grid-unit) * 3);
    position: relative;
    line-height: 1.6;
    color: var(--color-text-secondary);
  }

  .resource-list li::before {
    content: "‚Ä¢";
    color: var(--color-accent);
    font-weight: 700;
    position: absolute;
    left: 0;
    top: 0;
  }

  .resource-list a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .resource-list a:hover {
    text-decoration: underline;
    color: var(--color-text-primary);
  }

  @media (max-width: 768px) {
    .banner {
      padding: calc(var(--grid-unit) * 3);
    }

    .banner h1 {
      font-size: 2rem;
    }

    .banner-text {
      font-size: 1rem;
    }

    .resource-section {
      padding: calc(var(--grid-unit) * 3);
    }

    .resource-section h2 {
      font-size: 1.5rem;
    }
  }
</style>