---
import { getCollection } from 'astro:content';
import Layout from '../components/Layout.astro';
import { formatMeetingTime } from '../utils/meeting-time.ts';
import { getMeetingDateTime } from '../utils/calendar.ts';

const meetingsRaw = await getCollection('meetings');

// Reuse formatters (faster than creating inside .map) - Use Pacific Time for California team
const fmtISO = new Intl.DateTimeFormat('en-CA', { timeZone: 'UTC' }); // YYYY-MM-DD
const fmtDay = new Intl.DateTimeFormat('en-US', {
  weekday: 'short',
  timeZone: 'America/Los_Angeles', // Use Pacific Time for California
});
const fmtDisplay = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
  timeZone: 'America/Los_Angeles', // Use Pacific Time for California
});

// Normalize each item's date with Pacific Time parsing
const meetings = meetingsRaw.map((m) => {
  // Use getMeetingDateTime to get the actual meeting time with proper timezone handling
  const { date: meetingDateTime } = getMeetingDateTime(
    m.data.date,
    m.data.startTime,
    m.data.duration
  );

  return {
    ...m,
    _date: meetingDateTime,                       // actual Date with time
    _iso: fmtISO.format(meetingDateTime),         // 'YYYY-MM-DD' for datetime=
    _display: `${fmtDay.format(meetingDateTime)}, ${fmtDisplay.format(meetingDateTime)}`, // day prefix + human format
  };
});

// Get current time for comparison
const now = new Date();

// Sort meetings chronologically
const sortedMeetings = meetings.sort((a, b) => a._date.getTime() - b._date.getTime());

// Separate meetings into categories
const futureMeetings = sortedMeetings.filter(m => m._date >= now);
const pastMeetings = sortedMeetings.filter(m => m._date < now).reverse(); // Most recent first for past

const nextMeeting = futureMeetings[0] || null;
const upcomingMeetings = futureMeetings.slice(1, 6); // Show only next 5 meetings after the next one
