                </div>
              </header>
              <div class="compact-meta">
                {meeting.data.assignments && meeting.data.assignments.length > 0 && (
                  <span class="meta-item">üîß {meeting.data.assignments.length} assignments</span>
                )}
                {meeting.data.photos && meeting.data.photos.length > 0 && (
                  <span class="meta-item">üì∑ {meeting.data.photos.length} photos</span>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    {meetings.length === 0 && (
      <div class="no-meetings">
        <p>üóìÔ∏è Meeting documentation will appear here as we progress through the season!</p>
      </div>
    )}
  </div>
</Layout>

