---
import '@fontsource/oswald/300.css';
import '@fontsource/oswald/400.css';
import '@fontsource/oswald/500.css';
import '@fontsource/oswald/600.css';
import '@fontsource/oswald/700.css';
import '@fontsource/roboto-condensed/300.css';
import '@fontsource/roboto-condensed/400.css';
import '@fontsource/roboto-condensed/700.css';
import '@fontsource/work-sans/400.css';
import '@fontsource/work-sans/500.css';
import '@fontsource/work-sans/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/jetbrains-mono/700.css';
import '../styles/global.css';

import Header from './Header.astro';
import Sidebar from './Sidebar.astro';
import Footer from './Footer.astro';
import SEO from './SEO.astro';

export interface Props {
  title: string;
  description?: string;
  showSidebar?: boolean;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  canonical?: string;
}

const { title, description, showSidebar = true, image, type, publishedTime, canonical } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline src="/theme-init.js"></script>
    <script is:inline src="/rickroll-mode.js"></script>
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      canonical={canonical}
    />
  </head>
  <body>
    <!-- Hidden Easter Eggs - Click the invisible corners! -->
    <div id="secret-easter-egg" class="secret-easter-egg"></div>
    <div id="troll-easter-egg" class="troll-easter-egg"></div>
    
    <!-- Background Video Container (hidden by default) -->
    <div id="rickroll-background" class="rickroll-background" style="display: none;">
      <iframe 
        id="rickroll-video"
        width="560" 
        height="315" 
        src="" 
        title="Enhanced FLL Content"
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin" 
        allowfullscreen>
      </iframe>
      <button id="close-rickroll" class="close-rickroll">Ã—</button>
    </div>
    
    <!-- Rick Astley Rain Container -->
    <div id="rick-rain" class="rick-rain" style="display: none;"></div>
    
    <div class="site-wrapper">
      <Header />
      
      <main class="main-content" class:list={{ 'with-sidebar': showSidebar }}>
        {showSidebar && (
          <aside class="sidebar">
            <Sidebar />
          </aside>
        )}
        
        <div class="content">
          <slot />
        </div>
      </main>
      
      <Footer />
    </div>
  </body>
</html>

<style>
  .site-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    width: 100%;
  }

  .main-content.with-sidebar {
    display: grid;
    grid-template-columns: 1fr;
    gap: calc(var(--grid-unit) * 4);
  }

  .content {
    min-width: 0;
    padding: calc(var(--grid-unit) * 3) 0;
  }

  .sidebar {
    order: 1;
    padding-top: calc(var(--grid-unit) * 3);
  }

  .content {
    order: 0;
  }

  @media (min-width: 1024px) {
    .main-content.with-sidebar {
      grid-template-columns: var(--sidebar-width) 1fr;
    }
    
    .sidebar {
      order: 0;
      padding-top: calc(var(--grid-unit) * 3);
    }

    .content {
      order: 1;
    }
  }

  /* Hidden Easter Egg Styles */
  .secret-easter-egg {
    position: fixed;
    top: 0;
    right: 0;
    width: 150px;
    height: 150px;
    background: transparent;
    cursor: pointer;
    z-index: 10001;
    opacity: 0.05;
    transition: opacity 0.3s ease;
    background: radial-gradient(circle, rgba(220, 38, 38, 0.05) 0%, transparent 70%);
  }

  .secret-easter-egg:hover {
    opacity: 0.3;
    background: radial-gradient(circle, rgba(220, 38, 38, 0.3) 0%, rgba(220, 38, 38, 0.1) 50%, transparent 70%);
  }

  /* Troll Easter Egg Styles */
  .troll-easter-egg {
    position: fixed;
    top: 0;
    left: 0;
    width: 150px;
    height: 150px;
    background: transparent;
    cursor: pointer;
    z-index: 10001;
    opacity: 0.05;
    transition: opacity 0.3s ease;
    background: radial-gradient(circle, rgba(138, 43, 226, 0.05) 0%, transparent 70%);
  }

  .troll-easter-egg:hover {
    opacity: 0.3;
    background: radial-gradient(circle, rgba(138, 43, 226, 0.3) 0%, rgba(138, 43, 226, 0.1) 50%, transparent 70%);
  }

  /* Rickroll Background Video Styles */
  .rickroll-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .rickroll-background.active {
    opacity: 1;
    z-index: -1;
  }

  .rickroll-background iframe {
    width: 100vw;
    height: 100vh;
    border: none;
    object-fit: cover;
  }

  .close-rickroll {
    position: fixed;
    top: 20px;
    right: 20px;
    background: rgba(0, 0, 0, 0.7);
    border: 2px solid rgba(255, 255, 255, 0.8);
    color: white;
    font-size: 24px;
    font-weight: bold;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 10001;
    backdrop-filter: blur(5px);
  }

  .close-rickroll:hover {
    background: rgba(220, 38, 38, 0.8);
    border-color: white;
    transform: scale(1.1);
  }

  /* Make content slightly transparent when video is playing */
  body.rickroll-active .site-wrapper {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(2px);
    transition: all 0.5s ease;
  }

  [data-theme="dark"] body.rickroll-active .site-wrapper {
    background: rgba(10, 10, 10, 0.9);
  }

  [data-theme="llama"] body.rickroll-active .site-wrapper {
    background: rgba(244, 241, 232, 0.9);
  }

  /* Rick Astley Rain Styles - Just like llama rain! */
  :global(.rick-rain) {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    z-index: 10000;
    opacity: 1;
    transition: opacity 1s ease-out;
  }

  :global(.falling-rick) {
    position: absolute;
    top: -50px;
    font-size: 72px;
    line-height: 1;
    animation: rickfall linear forwards;
    pointer-events: none;
    transform-origin: center;
  }

  @keyframes rickfall {
    from {
      transform: translateY(-50px) rotate(0deg);
      opacity: 1;
    }
    to {
      transform: translateY(calc(100vh + 50px)) rotate(360deg);
      opacity: 0.7;
    }
  }

  /* Add some variety with different rotation speeds */
  :global(.falling-rick:nth-child(odd)) {
    animation: rickfall linear forwards, rickspin 1s linear infinite;
  }

  @keyframes rickspin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @media (max-width: 768px) {
    .close-rickroll {
      top: 15px;
      right: 15px;
      width: 40px;
      height: 40px;
      font-size: 20px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const easterEgg = document.getElementById('secret-easter-egg');
    const trollEgg = document.getElementById('troll-easter-egg');
    const rickrollBg = document.getElementById('rickroll-background');
    const rickrollVideo = document.getElementById('rickroll-video');
    const rickRain = document.getElementById('rick-rain');
    const closeBtn = document.getElementById('close-rickroll');
    
    // YouTube video ID for Never Gonna Give You Up
    const YOUTUBE_VIDEO_ID = 'dQw4w9WgXcQ';
    const YOUTUBE_EMBED_URL = `https://www.youtube.com/embed/${YOUTUBE_VIDEO_ID}?autoplay=1&rel=0`;
    
    // You've Been Trolled video URL
    const TROLL_VIDEO_URL = 'https://www.youtube.com/watch?v=RD3Xl0Qr0uXuY';
    
    let isRickrollActive = false;
    let rickRainInterval = null;
    
    // Rick Astley rain functions - exactly like llama rain!
    function startRickRain() {
      rickRain.style.display = 'block';
      rickRain.innerHTML = '';
      
      const createRick = () => {
        const rick = document.createElement('div');
        rick.className = 'falling-rick';
        rick.textContent = 'ðŸ•º'; // Dancing man emoji (closest to Rick Astley)
        const leftPos = Math.random() * 100 + 'vw';
        rick.style.left = leftPos;
        rick.style.animationDuration = (Math.random() * 3 + 2) + 's'; // 2-5 seconds
        rick.style.animationDelay = Math.random() * 2 + 's';
        rickRain.appendChild(rick);
        
        // Remove rick after animation
        setTimeout(() => {
          if (rick.parentNode) {
            rick.parentNode.removeChild(rick);
          }
        }, 7000);
      };
      
      // Create initial burst of Ricks
      for (let i = 0; i < 15; i++) {
        setTimeout(createRick, i * 200);
      }
      
      // Continue creating Ricks at intervals
      rickRainInterval = setInterval(createRick, 500);
    }
    
    function stopRickRain() {
      if (rickRainInterval) {
        clearInterval(rickRainInterval);
        rickRainInterval = null;
      }
      
      if (rickRain) {
        rickRain.style.opacity = '0';
        setTimeout(() => {
          rickRain.style.display = 'none';
          rickRain.innerHTML = '';
          rickRain.style.opacity = '1';
        }, 1000);
      }
    }
    
    // Easter egg click handler
    if (easterEgg) {
      easterEgg.addEventListener('click', function() {
        if (isRickrollActive) return;
        
        // Set the video source and show the background
        rickrollVideo.src = YOUTUBE_EMBED_URL;
        rickrollBg.style.display = 'block';
        rickrollBg.classList.add('active');
        document.body.classList.add('rickroll-active');
        
        // Start the Rick Astley rain!
        startRickRain();
        
        isRickrollActive = true;
      });
    }
    
    // Troll easter egg click handler
    if (trollEgg) {
      trollEgg.addEventListener('click', function() {
        // Open the "You've Been Trolled" video in a new tab
        window.open(TROLL_VIDEO_URL, '_blank');
      });
    }
    
    // Close button handler
    if (closeBtn) {
      closeBtn.addEventListener('click', function() {
        closeRickroll();
      });
    }
    
    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isRickrollActive) {
        closeRickroll();
      }
    });
    
    function closeRickroll() {
      if (!isRickrollActive) return;
      
      // Remove active classes and fade out
      rickrollBg.classList.remove('active');
      document.body.classList.remove('rickroll-active');
      
      // Stop the Rick rain
      stopRickRain();
      
      setTimeout(() => {
        rickrollBg.style.display = 'none';
        rickrollVideo.src = ''; // Stop the video
        isRickrollActive = false;
      }, 500); // Match the CSS transition duration
    }
  });
</script>