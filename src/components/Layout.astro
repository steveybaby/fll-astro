---
import '@fontsource/oswald/300.css';
import '@fontsource/oswald/400.css';
import '@fontsource/oswald/500.css';
import '@fontsource/oswald/600.css';
import '@fontsource/oswald/700.css';
import '@fontsource/roboto-condensed/300.css';
import '@fontsource/roboto-condensed/400.css';
import '@fontsource/roboto-condensed/700.css';
import '@fontsource/work-sans/400.css';
import '@fontsource/work-sans/500.css';
import '@fontsource/work-sans/600.css';
import '@fontsource/jetbrains-mono/400.css';
import '@fontsource/jetbrains-mono/700.css';
import '../styles/global.css';

import Header from './Header.astro';
import Sidebar from './Sidebar.astro';
import Footer from './Footer.astro';
import SEO from './SEO.astro';

export interface Props {
  title: string;
  description?: string;
  showSidebar?: boolean;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  canonical?: string;
}

const { title, description, showSidebar = true, image, type, publishedTime, canonical } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script is:inline src="/theme-init.js"></script>
    <script is:inline src="/rickroll-mode.js"></script>
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      canonical={canonical}
    />
  </head>
  <body>
    <!-- Hidden Easter Egg - Click the invisible top right corner! -->
    <div id="secret-easter-egg" class="secret-easter-egg" title="ðŸŽµ"></div>
    
    <!-- Background Video Container (hidden by default) -->
    <div id="rickroll-background" class="rickroll-background" style="display: none;">
      <iframe 
        id="rickroll-video"
        width="560" 
        height="315" 
        src="" 
        title="Enhanced FLL Content"
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin" 
        allowfullscreen>
      </iframe>
      <button id="close-rickroll" class="close-rickroll">Ã—</button>
    </div>
    
    <div class="site-wrapper">
      <Header />
      
      <main class="main-content" class:list={{ 'with-sidebar': showSidebar }}>
        {showSidebar && (
          <aside class="sidebar">
            <Sidebar />
          </aside>
        )}
        
        <div class="content">
          <slot />
        </div>
      </main>
      
      <Footer />
    </div>
  </body>
</html>

<style>
  .site-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .main-content {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    width: 100%;
  }

  .main-content.with-sidebar {
    display: grid;
    grid-template-columns: 1fr;
    gap: calc(var(--grid-unit) * 4);
  }

  .content {
    min-width: 0;
    padding: calc(var(--grid-unit) * 3) 0;
  }

  .sidebar {
    order: 1;
    padding-top: calc(var(--grid-unit) * 3);
  }

  .content {
    order: 0;
  }

  @media (min-width: 1024px) {
    .main-content.with-sidebar {
      grid-template-columns: var(--sidebar-width) 1fr;
    }
    
    .sidebar {
      order: 0;
      padding-top: calc(var(--grid-unit) * 3);
    }

    .content {
      order: 1;
    }
  }

  /* Hidden Easter Egg Styles */
  .secret-easter-egg {
    position: fixed;
    top: 0;
    right: 0;
    width: 50px;
    height: 50px;
    background: transparent;
    cursor: pointer;
    z-index: 10001;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .secret-easter-egg:hover {
    opacity: 0.1;
    background: radial-gradient(circle, rgba(220, 38, 38, 0.1) 0%, transparent 70%);
  }

  /* Rickroll Background Video Styles */
  .rickroll-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.9);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
  }

  .rickroll-background iframe {
    max-width: 90vw;
    max-height: 90vh;
    border-radius: 12px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
  }

  .close-rickroll {
    position: absolute;
    top: 20px;
    right: 30px;
    background: rgba(255, 255, 255, 0.2);
    border: none;
    color: white;
    font-size: 40px;
    font-weight: bold;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .close-rickroll:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .rickroll-background iframe {
      width: 95vw;
      height: 56.25vw; /* 16:9 aspect ratio */
      max-height: 80vh;
    }
    
    .close-rickroll {
      top: 10px;
      right: 15px;
      width: 45px;
      height: 45px;
      font-size: 30px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const easterEgg = document.getElementById('secret-easter-egg');
    const rickrollBg = document.getElementById('rickroll-background');
    const rickrollVideo = document.getElementById('rickroll-video');
    const closeBtn = document.getElementById('close-rickroll');
    
    // YouTube video ID for Never Gonna Give You Up
    const YOUTUBE_VIDEO_ID = 'dQw4w9WgXcQ';
    const YOUTUBE_EMBED_URL = `https://www.youtube.com/embed/${YOUTUBE_VIDEO_ID}?autoplay=1&rel=0`;
    
    let isRickrollActive = false;
    
    // Easter egg click handler
    if (easterEgg) {
      easterEgg.addEventListener('click', function() {
        if (isRickrollActive) return;
        
        // Set the video source and show the overlay
        rickrollVideo.src = YOUTUBE_EMBED_URL;
        rickrollBg.style.display = 'flex';
        isRickrollActive = true;
        
        // Prevent body scrolling
        document.body.style.overflow = 'hidden';
        
        // Fade in animation
        setTimeout(() => {
          rickrollBg.style.opacity = '1';
        }, 10);
      });
    }
    
    // Close button handler
    if (closeBtn) {
      closeBtn.addEventListener('click', function() {
        closeRickroll();
      });
    }
    
    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isRickrollActive) {
        closeRickroll();
      }
    });
    
    // Close when clicking background (not the video)
    if (rickrollBg) {
      rickrollBg.addEventListener('click', function(e) {
        if (e.target === rickrollBg) {
          closeRickroll();
        }
      });
    }
    
    function closeRickroll() {
      if (!isRickrollActive) return;
      
      // Fade out animation
      rickrollBg.style.opacity = '0';
      
      setTimeout(() => {
        rickrollBg.style.display = 'none';
        rickrollVideo.src = ''; // Stop the video
        document.body.style.overflow = ''; // Restore scrolling
        isRickrollActive = false;
      }, 300);
    }
  });
</script>