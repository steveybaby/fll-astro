    }

    .no-photos-content h4 {
      font-size: 1.1rem;
    }
  }
</style>

<script define:vars={{ meetingPhotos, meetingDate }}>
  let currentPhotoIndex = 0;

  function openR2Lightbox(index) {
    if (!meetingPhotos || meetingPhotos.length === 0) return;
    
    currentPhotoIndex = index;
    const lightbox = document.getElementById('r2-photo-lightbox');
    const photo = document.getElementById('r2-lightbox-photo');
    const video = document.getElementById('r2-lightbox-video');
    const videoSource = document.getElementById('r2-video-source');
    const counter = document.getElementById('r2-photo-counter');
    const filename = document.getElementById('r2-photo-filename');
    
    const item = meetingPhotos[index];
    const isVideo = item.type === 'video';
    
    if (isVideo) {
      // Show video container, hide photo
      photo.style.display = 'none';
      document.getElementById('r2-lightbox-video-container').style.display = 'flex';
      
      // Set video source
      videoSource.src = item.fullImage;
      videoSource.type = item.filename.endsWith('.mp4') ? 'video/mp4' : 'video/quicktime';
      video.load(); // Reload video with new source
      
      // Show play overlay
      const playOverlay = document.getElementById('r2-lightbox-play-overlay');
      playOverlay.style.display = 'flex';
      playOverlay.classList.remove('hidden');
    } else {
      // Show photo, hide video container
      document.getElementById('r2-lightbox-video-container').style.display = 'none';
      photo.style.display = 'block';
      
      // Set photo source
      photo.src = item.fullImage;
    }
    
    // Update info
    counter.textContent = `${index + 1} / ${meetingPhotos.length}`;
    filename.textContent = item.filename;
    
    // Show lightbox
    lightbox.style.display = 'block';
    document.body.style.overflow = 'hidden';
    
    // Add event handlers for video play overlay
    if (isVideo) {
      const playOverlay = document.getElementById('r2-lightbox-play-overlay');
      const videoElement = document.getElementById('r2-lightbox-video');
      
      playOverlay.onclick = function() {
        videoElement.play();
        playOverlay.style.display = 'none';
      };
      
      // Show overlay when video ends
      videoElement.onended = function() {
        playOverlay.style.display = 'flex';
      };
      
      // Hide overlay when video starts playing
      videoElement.onplay = function() {
        playOverlay.style.display = 'none';
      };
      
      // Show overlay when video is paused
      videoElement.onpause = function() {
        if (!videoElement.ended) {
          playOverlay.style.display = 'flex';
        }
      };
    }
  }

  function closeR2Lightbox(event) {
    if (!event || event.target.id === 'r2-photo-lightbox' || event.target.classList.contains('lightbox-close')) {
      const lightbox = document.getElementById('r2-photo-lightbox');
      const video = document.getElementById('r2-lightbox-video');
      
      // Pause video if playing
      if (video && !video.paused) {
        video.pause();
      }
      
      lightbox.style.display = 'none';
      document.body.style.overflow = 'auto';
    }
  }

  function changeR2Photo(direction) {
    if (!meetingPhotos || meetingPhotos.length === 0) return;
    
    currentPhotoIndex += direction;
    
    // Wrap around
    if (currentPhotoIndex >= meetingPhotos.length) {
      currentPhotoIndex = 0;
    } else if (currentPhotoIndex < 0) {
      currentPhotoIndex = meetingPhotos.length - 1;
    }
    
    // Update media and info
    const photo = document.getElementById('r2-lightbox-photo');
    const video = document.getElementById('r2-lightbox-video');
    const videoSource = document.getElementById('r2-video-source');
    const counter = document.getElementById('r2-photo-counter');
    const filename = document.getElementById('r2-photo-filename');
    
    const item = meetingPhotos[currentPhotoIndex];
    const isVideo = item.type === 'video';
    
    if (isVideo) {
      // Show video container, hide photo
      photo.style.display = 'none';
      document.getElementById('r2-lightbox-video-container').style.display = 'flex';
      
      // Set video source
      videoSource.src = item.fullImage;
      videoSource.type = item.filename.endsWith('.mp4') ? 'video/mp4' : 'video/quicktime';
      video.load();
      
      // Show play overlay
      const playOverlay = document.getElementById('r2-lightbox-play-overlay');
      playOverlay.style.display = 'flex';
    } else {
      // Show photo, hide video container
      document.getElementById('r2-lightbox-video-container').style.display = 'none';
      photo.style.display = 'block';
      
      // Set photo source
      photo.src = item.fullImage;
    }
    
    counter.textContent = `${currentPhotoIndex + 1} / ${meetingPhotos.length}`;
    filename.textContent = item.filename;
  }

  // Keyboard navigation
  document.addEventListener('keydown', function(event) {
    const lightbox = document.getElementById('r2-photo-lightbox');
    if (lightbox && lightbox.style.display === 'block') {
      switch(event.key) {
        case 'Escape':
          closeR2Lightbox();
          break;
        case 'ArrowLeft':
          changeR2Photo(-1);
          break;
        case 'ArrowRight':
          changeR2Photo(1);
          break;
      }
    }
  });

  // Make functions globally available
  if (typeof window !== 'undefined') {
    window.openR2Lightbox = openR2Lightbox;
    window.closeR2Lightbox = closeR2Lightbox;
    window.changeR2Photo = changeR2Photo;
  }
</script>