    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 calc(var(--grid-unit) * 3) 0;
    display: flex;
    align-items: center;
    gap: calc(var(--grid-unit) * 2);
  }

  .photo-count {
    font-size: 0.9rem;
    font-weight: 400;
    background: var(--color-accent);
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-family: var(--font-body);
