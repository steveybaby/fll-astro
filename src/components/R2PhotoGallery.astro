    transition: transform 0.3s ease;
  }

  .video-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .video-thumbnail {
    background: #000;
    object-fit: contain !important; /* Show full video without cropping */
  }

  .play-button-overlay {
